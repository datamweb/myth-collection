{
    "name": "myth/collection",
    "description": "Javascript inspired, supercharged array object for PHP.",
    "keywords": [
        "php",
        "array"
    ],
    "homepage": "https://github.com/lonnieezell/myth-collection",
    "license": "MIT",
    "authors": [
        {
            "name": "Lonnie Ezell",
            "email": "lonnieje@gmail.com",
            "homepage": "http://newmythmedia.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Myth\\Collection\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
